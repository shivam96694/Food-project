<html>
    <head>
        <link href="/stylesheets/display.css" rel="stylesheet"/>
        <link href="https://fonts.googleapis.com/css2?family=Dosis:wght@200..800&family=Noto+Serif:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script> 
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    </head>
    <body>
        <div class="maincontainer">
            <div  class="box">
                <div class="titlediv">
                    <img src="/images/burger.png" class="imagesize" />
                    <div class="heading"> Food Details</div>
                 </div>

                 <div style="display: flex;flex-direction:column;width: 168px;background:gray">
                    <div class="divider"></div>
                    <div style="color:white;align-self:center;font-size: 12px;font-weight:bold;letter-spacing:1px;">FOOD LISTS</div>
                 </div>    
        <table class="table table-stripad">
            <thead>
              <tr>
                <th scope="col">#</th>
                <th scope="col">Foodname</th>
                <th scope="col">Categoryid</th>
                <th scope="col">Ingredient</th>
                <th scope="col">Foodprice</th>
                <th scope="col">Foodofferprice</th>
                <th scope="col">Status</th>
                <th scope="col">Foodtype</th>
                <th scope="col">foodtaste</th>
                <th scope="col">poster</th>
                <th scope="col">Update</th>
            </tr>
            </thead>
            <tbody>
        <% data.map((item,i) =>{%>
            <tr>
                <td><%= item.fooddataid %></td>
                <td><%= item.foodname %></td>
                <td><%= item.categoryname %><br>,<%= item.subcategoryname %></td>
                <td><%= item.Ingredient %></td>
                <td><%= item.foodprice %></td>
                <td><%= item.foodofferprice %></td>
                <td><%= item.status %></td>
                <td><%= item.foodtype %></td>
                <td><%= item.foodtaste %></td>
                <td><a href="/food/edit_image?fooddataid=<%=item.fooddataid %>&item.foodname=<%= item.foodname %>&poster=<%=item.poster %>"><img src="/images/<%= item.poster %>" class="posterstyle"></a></td>
        <td><a href="/food/display_by_id?fooddataid=<%=item.fooddataid %>">Edit</a></td></tr>
        <%})%>
    </tbody>
        </table>
        </div>
        </div>
        
    </body>
</html>